<div class="mt-2">
    <% for (let i = 0; i < websites.length; i++) { 
        const website = websites[i];
    %>
        <a href="/websites/<%= website._id %>" class="text-decoration-none text-black">
            <div class="website-card border border-black border-2 rounded-1 mt-2 row">
                <div class="row mt-2">
                    <div class="col-10">
                        <h3><%= website.name %></h3> 
                    </div>
                    <div class="col-2 d-flex align-items-center justify-content-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="<%= website.status == 0 ? 'green' : 'red' %>" class="bi bi-circle-fill" viewBox="0 0 25 25">
                            <circle cx="8" cy="8" r="8"/>
                        </svg>
                        <h3 class="ms-1 text-<%= website.status == 0 ? 'success' : 'danger' %>"><%= formatStatus(website.status).toUpperCase() %></h3>
                    </div>
                </div>
                <div class="mt-2 row">
                    <% for (let j = 0; j < website.history.length; j++) { 
                        const history = website.history[j];
                    %>
                        <div class="border border-1 border-black bg-<%= website.status == 0 ? 'success' : 'danger' %> m-2" style="width: 15px; height: 15px;">
                            <span></span>
                        </div>
                    <% } %>
                </div>
            </div>
        </a>
    <% } %>
</div>